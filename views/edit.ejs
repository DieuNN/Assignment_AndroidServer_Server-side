<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Chỉnh sửa</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>
    <style>
        input, select, textarea {
            max-width: 80%;
        }

        textarea {
         height: 12rem;
        }

        button {
            max-width: 7rem;
        }
    </style>
</head>
<body class="container">
<!--include navbar-->
<% include nav.ejs %>
<!--main content-->
<div style="display: flex; flex-direction: row; width: 100%; margin-top: 2rem;">
    <!--Left form-->
    <div style="width: 50%">
        <form enctype="application/x-www-form-urlencoded" method="post" action="/edit/<%= data.id %>">
            <p><%= data.id%> </p>
            <div style="display: flex;flex-direction: column; flex-wrap: nowrap; gap: 3rem">

                <label for="wallpaperName">
                    <input type="text" value="<%= data.wallpaperName %>" name="wallpaperName" class="form-control">
                </label>
                <label for="wallpaperDescription">
                    <textarea type="text" placeholder="Nội dung" name="wallpaperDescription"
                              class="form-control"><%= data.wallpaperDescription %></textarea>
                </label>
                <label for="wallpaperLink">
                    <input type="text" placeholder="Đuờng dẫn ảnh" name="wallpaperLink" class="form-control" value="<%= data.wallpaperLink%>">
                </label>
                <label for="wallpaperKind">
                    <select name="wallpaperKind" class="form-control">
                        <option value="Anime">Anime</option>
                        <option value="Nature">Thiên nhiên</option>
                        <option value="Dota2">Dota 2</option>
                    </select>
                </label>
                <button type="submit" class="btn btn-primary">Cập nhật</button>
            </div>
        </form>
    </div>
    <!--Right content-->
    <div style="width: 50%; display: flex; flex-direction: column">
        <h3>Thông tin hiện tại</h3>
        <p>Tên: <%= data.wallpaperName%></p>
        <p>Nội dung: <%= data.wallpaperDescription%></p>
        <p>Ngày cập nhật: <%= data.updateTime%></p>
        <p>Thể loại: <%= data.wallpaperKind%></p>
        <img src="<%= data.wallpaperLink%>">
    </div>
</div>
<% include footer.ejs %>
</body>
</html>